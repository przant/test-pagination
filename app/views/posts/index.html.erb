<div class="row">
  <div class="col">
    <p id="notice"><%= notice %></p>

  <h1>Posts</h1>

  <br>
  <br>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.comment %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>

  <br>
  <br>

  <br>
  <br>

  <%= params %>

  <br>
  <br>

  <%= paginate @posts %>

  <br>
  <br>

  <div>
    <span>Items per page</span>
    <ul>
      <% ITEMS_PER_PAGE.each do |size| %>
        <li><%= link_to size, url_for(per_page: size, page: params[:page]) %></li>
      <% end %>
    </ul>
  </div>

  <br>
  <br>

  <%= page_entries_info @posts %>

  </div>
</div>
